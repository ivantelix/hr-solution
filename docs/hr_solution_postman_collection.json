			"item": [
				{
					"name": "Register Tenant Owner",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.tokens) {",
									"    pm.environment.set(\"access_token\", jsonData.tokens.access);",
									"    pm.environment.set(\"refresh_token\", jsonData.tokens.refresh);",
									"}",
									"if (jsonData.tenant) {",
									"    pm.environment.set(\"tenant_id\", jsonData.tenant.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"new_owner\",\n    \"email\": \"owner@newcompany.com\",\n    \"password\": \"Security123!\",\n    \"password_confirm\": \"Security123!\",\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"phone\": \"+1234567890\",\n    \"company_name\": \"New Company LLC\",\n    \"company_slug\": \"new-company\",\n    \"industry\": \"Technology\",\n    \"plan\": \"basic\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
							"host": [
								"{{base_url}}"
							],
